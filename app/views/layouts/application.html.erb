<!DOCTYPE html>
<html>
  <head>
    <title>Employee Recognition Platform</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <h1><%= link_to 'Company Logo', root_path %></h1>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

      <nav>
        <% if !admin_user_signed_in? %>
          <h4>User navigation</h4>
          <ul>
            <% if !employee_signed_in? %>
              <li><%= link_to 'Sign in', new_employee_session_path %></li>
              <li><%= link_to 'Sign up', new_employee_registration_path %></li>
            <% elsif employee_signed_in? %>
              <li><%= link_to 'Sign out', destroy_employee_session_path, method: :delete %></li>
            <%end%>
          </ul>
        <% end %>
        
        <% if !employee_signed_in? %>
          <h4>Admin navigation</h4>
          <ul>
            <% if !admin_user_signed_in? %>
              <li><%= link_to 'Sign in', new_admin_user_session_path %></li>
            <% elsif admin_user_signed_in? %>
              <li><%= link_to 'Sign out', destroy_admin_user_session_path, method: :delete %></li>
            <% end %>
          </ul>
        <% end %>

      </nav>
    <%= yield %>
  </body>
</html>
